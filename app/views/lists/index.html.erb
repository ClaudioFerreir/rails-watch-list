<div>
  <div class="banner">
  <h1>Save any kind of movies</h1>
</div>



<div class="container">
  <div class="d-flex justify-content-between">
    <h2>My list</h2>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success' %>
  </div>
  <div class="cards my-5">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>

