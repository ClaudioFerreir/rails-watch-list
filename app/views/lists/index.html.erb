<h1>Lists</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', list, class: 'btn btn-success' %></td>
        <%# <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-info' %></td> %>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New List', new_list_path, class: 'btn btn-primary' %>
