<div class="banner", style="url(<%= @list.picture_url %>);" >
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>


<div class="container">

  <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-success' %>
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="card" style="width: 18rem;">
        <%= image_tag movie.poster_url, class: "card-img-top", alt:"..." %>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title%> - <%= movie.rating%> <i class="fas fa-star"></i></h5>
          <p class="card-text"><%= movie.overview%></p>
          <p><%= bookmark.comment %></p>
          <%= link_to "delete", bookmark_path(bookmark), method: :delete, data: {confirm: "are you sure?"}%>
        </div>
    <% end %>
</div>
